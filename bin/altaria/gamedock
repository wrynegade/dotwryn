#!/bin/zsh
source ${0:a:h}/xorg.zsh

xrandr \
	--output DP-0 \
		--off \
	--output HDMI-0 \
		--primary \
		--mode 3840x2160 \
		--rotate normal \
		--pos 0x0 \
	;

pkill compton

scwrypts desktop/screen-blank      -- disable
scwrypts desktop/i3/set-background -- roy-art.jpg
scwrypts desktop/play-sound        -- gamedock
