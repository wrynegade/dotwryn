#!/bin/zsh
source $HOME/.config/wryn/env.zsh
#####################################################################

GET_COLORSCHEME_HEX() {
	[ $1 ] && [[ $1 -le 15 ]] && [[ $1 -ge 0 ]] \
		|| __FAIL 1 'must provide ANSI color number 0-15'

	grep "^color$1" "$DOTWRYN/colorschemes/kitty.main" \
		| awk '{print $2}' \
		| sed 's/ //g; s/#//g' \
		| tr '[:lower:]' '[:upper:]'
}

#####################################################################
[ ! $1 ] && return 0
GET_COLORSCHEME_HEX $@
