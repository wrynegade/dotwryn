#!/bin/zsh

echo hiya
git submodule update --remote --rebase --init

SUBMODULES=$(\
	git status\
		| grep '(new commits)' \
		| sed 's/^.*modified:\s*//; s/\s*(new commits).*$//' \
)

echo $SUBMODULES

[[ ${#SUBMODULES[@]} -gt 0 ]] && {
	git add $SUBMODULES
	git commit -m "Updated submodules to master : $SUBMODULES"
}

