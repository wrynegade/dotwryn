#!/bin/zsh
source ${0:a:h}/common

xrandr \
	--output DP-3 \
		--primary \
		--auto \
		--mode 1920x1080 \
		--rotate normal \
		--pos 0x0 \
	--output eDP-1 \
		--off \
		;

xset dpms 0 0 0 && xset s noblank && xset s off \
	&& notify-send 'DPMS' 'disabled screen blank'

$DOTWRYN/bin/set-background random
PLAY_SFX gamedock
