#!/bin/zsh
source ${0:a:h}/common

xrandr --output HDMI-0 --mode 3840x2160; sleep 1

xrandr \
	--output DP-0 \
		--off \
	--output DP-2 \
		--primary \
		--mode 3840x2160 \
		--rotate normal \
	;

sleep 2;
xrandr --output DP-2 --mode 3840x2160 --rate 120;

$DOTWRYN/bin/set-background random
PLAY_SFX login

xset dpms 0 0 0 && xset s noblank && xset s off \
	&& notify-send 'DPMS' 'disabled screen blank'
